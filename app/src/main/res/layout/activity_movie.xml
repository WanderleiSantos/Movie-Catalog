<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/imageview_photoback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/noimagemovie"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transp"/>

        <ImageView
            android:id="@+id/imageview_photo"
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:src="@drawable/noimagemovie" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_toRightOf="@+id/imageview_photo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/lbl_description_release"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_view_releasedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:text="@string/lbl_description_release"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/lbl_description_directedby"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_view_directedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:text="@string/lbl_description_release"
                android:textColor="@color/white"/>


        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:layout_gravity="fill_vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    </android.support.v4.widget.NestedScrollView>

    <include android:id="@+id/toolbar"
        layout="@layout/app_bar_transparent"/>

</RelativeLayout>